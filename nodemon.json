{
  "watch": [
    "bin",
    "packages/**/bin",
    "packages/**/scripts",
    "packages/**/src",
    "public/**",
    "scripts",
    "src/**",
    ".env.development"
  ],
  "ext": ".css,.scss,.html,.htm,.hbs,.ts,.tsx,.js,.json",
  "ignore": ["src/**/*.spec.ts"],
  "exec": "node --env-file=.env.development --loader ts-node/esm/transpile-only ./src/apps/substratum/server/start.ts"
}
